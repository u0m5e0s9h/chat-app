{
  "name": "chat-app-security-tests",
  "version": "1.0.0",
  "description": "Firestore security rules tests for chat application",
  "scripts": {
    "test": "firebase emulators:exec --only firestore 'jest tests/firestore-rules.test.js'",
    "test:watch": "firebase emulators:exec --only firestore 'jest tests/firestore-rules.test.js --watch'",
    "emulators": "firebase emulators:start --only firestore,auth"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "firebase": "^9.22.0",
    "jest": "^29.5.0"
  }
}
